<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controlador.LoginController" prefWidth="400" prefHeight="300">
    <children>
        <VBox alignment="CENTER" spacing="15" layoutX="50" layoutY="30" prefWidth="300">
            <!-- Título -->
            <Label text="Iniciar Sesión" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2E3B4E; -fx-padding: 10px;"/>
            
            <!-- Campo para el correo electrónico -->
            <TextField fx:id="campoCorreo" promptText="Correo electrónico" style="-fx-background-color: #F1F1F1; -fx-border-radius: 5px; -fx-padding: 10px; -fx-font-size: 14px;"/>
            
            <!-- Campo para la contraseña -->
            <PasswordField fx:id="campoContrasena" promptText="Contraseña" style="-fx-background-color: #F1F1F1; -fx-border-radius: 5px; -fx-padding: 10px; -fx-font-size: 14px;"/>
            
            <!-- Botón de ingresar -->
            <Button text="Ingresar" onAction="#iniciarSesion" style="-fx-background-color: #5B8E3C; -fx-text-fill: white; -fx-padding: 12px 20px; -fx-font-size: 14px; -fx-border-radius: 5px;"/>
            
            <!-- Mensaje de error -->
            <Label fx:id="labelError" textFill="red" style="-fx-font-size: 12px; -fx-padding: 5px;" />
        </VBox>

        <!-- Borde superior para el panel -->
        <Region layoutX="0" layoutY="0" prefHeight="30" prefWidth="400" style="-fx-background-color: #2E3B4E;" />
    </children>
</AnchorPane>
